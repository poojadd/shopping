<h1> Add roles to users </h1>

<% if @users.blank? %>
    <p>There are not any user currently in the system.</p>
<% end %>
<h1>Listing Users</h1>

<div id="user-list-container">

  <% @users.each do |user| %>

      <div><%= user.email %>
        <%= link_to 'Assign roles', add_roles_user_path(user), :remote => true  %>
        <%= link_to 'Show', user_path(user) %>
        <%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %>
      </div>

      <div id="user-<%= user.id %>-roles-container" style=" display: none ;">

      </div>
  <% end %>


</div>




