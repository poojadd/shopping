<div style="display:inline-block; margin-top: 12px; ">
  <div style=" float:left;margin-right: 10px; " >
    <%= image_tag(@product.image)  %>
  </div>
  <div style="float: left;font-size: 20px;">
    <h1> <%= @product.name %> </h1>
    <p style="color: #D14747;">Rs. <%= @product.price %></p>

  <p style="text-transform: uppercase;font-size: 14px;"> Size:  <%= @product.size %></p>
    <p style="text-transform: uppercase;font-size: 14px;">Color: <%= @product.color %></p>
     <p><%= link_to 'Add to cart', add_cart_path(@product) %></p>
  </div>
</div>
<div style="border-top:1px solid #D6D6D6;margin-right:10px; margin-top:10px; padding-top:10px;">
  <h3>Product Description </h3>
  <%= @product.description %>
</div>



