
       <h1>Product</h1>

  <div style="float: right">
    <%= image_tag @product.image_url.to_s %>

  </div>
<div>
  <table>
    <tr>
      <td> Name:</td>
      <td>   <%= @product.name %>    </td>
    </tr>
    <tr>
      <td>Brand:</td>
      <td>  <%= @product.brand.name %> </td>
    </tr>
    <tr>
      <td>Category</td>
      <td>  <%= @product.category %> </td>
    </tr>
    <tr>
      <td> Price</td>
      <td>  <%= @product.price %> </td>
    </tr>
    <tr>
      <td> Gender</td>
      <td> <%= @product.gender %>
      </td>
    </tr>
    <tr>
      <td> Size</td>
      <td>                    <%= @product.size %>

      </td>
    </tr>
    <tr>
      <td> Color</td>
      <td> <%= @product.color %>
      </td>
    </tr>
    <tr>
      <td> Material type</td>
      <td>    <%= @product.material_type %> </td>
    </tr>
    <tr>
      <td> Description</td>
      <td>    <%= @product.description %> </td>
    </tr>
    <tr>
      <td> Tag_list, "Tags (separated by commas)"</td>
      <td>     <%= @product.tag_list %>  </td>
    </tr>


  </table>

  <br> <br>
  <%= link_to 'Back', admin_products_path %>    |
  <%= link_to 'Edit', edit_admin_product_path(@product) %>
</div>


